<a class="btn btn-warning" href='@Url.Action("IndexConSessionFarmacia", "Home")'>Home</a>
<a class="btn btn-warning" href='@Url.Action("Logout", "Account")'>Log Out</a>
<a class="btn btn-warning" href='@Url.Action("DatosCuentaFarmacia", "Home")'>Datos Personales</a>
<a class="btn btn-warning" href='@Url.Action("Stock", "Home")'>Tu Stock</a>
<div class="container mt-5">
    <h1>Agregar Producto</h1>
    <form action='@Url.Action("GuardarProducto", "Home")' method="post">
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" required>
        </div>
        <div class="form-group">
            <label for="Precio">Precio</label>
            <input type="text" class="form-control" id="Precio" name="Precio" required>
        </div>
        <div class="form-group">
            <label for="Stock">Stock</label>
            <input type="text" class="form-control" id="Stock" name="Stock" required>
        </div>
        <div class="form-group">
            <label for="Descripcion">Descripcion</label>
            <input type="text" class="form-control" id="Descripcion" name="Descripcion" required>
        </div>
        <div class="form-group">
            <label for="NoEditable">Farmacia</label>
            <input type="text" class="form-control" id="NoEditable" name="NoEditable" value="@ViewBag.Farmacia.Nombre" readonly>
        </div>

        <button type="submit" class="btn btn-primary">Agregar Producto</button>
    </form>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
