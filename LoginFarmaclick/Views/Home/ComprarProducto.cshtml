    <h1>Comprar producto</h1>
    <p>vas a comprar el producto @ViewBag.Producto.Nombre</p>
    <a class="btn btn-warning" href='@Url.Action("IndexConSessionPaciente", "Home")'>Home</a>
    <a class="btn btn-warning" href='@Url.Action("Logout", "Account")'>Log Out</a>
    <a class="btn btn-warning" href='@Url.Action("DatosCuentaPaciente", "Home")'>Datos Personales</a>
    <a class="btn btn-warning" href='@Url.Action("PedidosPaciente", "Home")'>Tus Pedidos</a>

<div class="container mt-5">
    <h2>Comprar producto</h2>
    <form action='@Url.Action("Comprar", "Home")' method="post">
        <input type="hidden" name="idProducto" value="@ViewBag.Producto.IdProducto" />
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-controlz" id="nombre" name="Nombre" value="@ViewBag.Producto.Nombre" readonly>
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input type="text" class="form-control" id="precio" name="Precio" value="@ViewBag.Producto.Precio" readonly>
        </div>
        <div class="form-group">
            <label for="stock">Stock</label>
            <input type="text" class="form-control" id="stock" name="Stock" value="@ViewBag.Producto.Stock" readonly>
        </div>
        <div class="form-group">
            <label for="Descripcion">Descripcion</label>
            <input type="text" class="form-control" id="Descripcion" name="Descripcion" value="@ViewBag.Producto.Descripcion" readonly>
        </div>
        <div class="form-group">
            <label for="Nombre">Farmacia</label>
            <input type="text" class="form-control" id="Nombre" name="FarmaciaNombre" value="@ViewBag.Farmacia.Nombre" readonly>
        </div>
        <div class="form-group" style="display:none;">
            <label for="IdFarmacia">Farmacia</label>
            <input type="number" class="form-control" id="IdFarmacia" name="IdFarmacia" value="@ViewBag.Farmacia.IdFarmacia" readonly>
        </div>
        <div class="form-group">
            <label for="Direccion">Direccion a entregar</label>
            <input type="text" class="form-control" id="Direccion" name="Direccion" value="" required>
        </div>
        <button type="submit" class="btn btn-primary">Comprar</button>
        <a class="btn btn-warning" href='@Url.Action("IndexConSessionPaciente", "Home")'>Cancelar</a>
    </form>
</div>
