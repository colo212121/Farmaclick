<div class="container mt-5">
    <h1>Agregar Receta</h1>
    <form action='@Url.Action("GuardarReceta", "Home")' method="post">
        <div class="form-group">
            <label for="Nombre">Nombre Producto</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" required>
        </div>

        <div class="form-group">
            <label for="Contenido">Contenido</label>
            <input type="text" class="form-control" id="Contenido" name="Contenido" required>
        </div>

        <div class="form-group">
            <label for="NoEditable">Doctor</label>
            <input type="text" class="form-control" id="NoEditable" name="NoEditable" value="@ViewBag.Doctor.Nombre" readonly>
        </div>

        <div class="form-group">
            <label for="NoEditable">Fecha</label>
            <input type="text" class="form-control" id="NoEditable" name="NoEditable" value="@ViewBag.Fecha" readonly>
        </div>

        <!-- âœ… Selector de paciente -->
        <div class="form-group">
            <label for="IdPaciente">Paciente</label>
            <select class="form-control" id="IdPaciente" name="IdPaciente" required>
                <option value="">-- Selecciona un paciente --</option>
                @foreach (var paciente in ViewBag.Pacientes)
                {
                    <option value="@paciente.Nombre">@paciente.Nombre</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Agregar Receta</button>
    </form>
</div>

