@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farmaclick - Inicio</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <header class="d-flex align-items-center justify-content-between px-4 py-2">
    <img src="img/imagotipo.png" class="img-imagotipo" alt="logo">
    <h1 class="TITULO">"Tu receta, a un clic de distancia"</h1>
    <a href="/ayuda" class="text-white fs-4">
        <i class="bi bi-question-circle-fill"></i>
    </a>
    </header>

    <div class="container mt-4">
        <div class="row text-center">
            <div class="col-md-4">
                <a href="/Account/LoginDoctor">
                    <img src="img/inicio doc.png" class="img-btn" alt="Doctor">
                </a>
                <a href="/Account/RegistrarseDoctor" class="btn btn-secondary btn-option">Registrarse</a>
            </div>
            <div class="col-md-4">
                <a href="/Account/LoginFarmacia">
                    <img src="img/inicio farm.png" class=" img-btn" alt="Farmacia">
                </a>
                <a href="/Account/RegistrarseFarmacia" class="btn btn-secondary btn-option">Registrarse</a>
            </div>
            <div class="col-md-4">
                <a href="/Account/LoginPaciente">
                    <img src="img/inicio pac.png" class="img-btn" alt="Paciente">
                </a>
                <a href="/Account/RegistrarsePaciente" class="btn btn-secondary btn-option">Registrarse</a>
            </div>
        </div>
       
        <h3 class="H3">Nuestra selección para vos</h3>
        <div class="row products">
            <div class="cardMedic">
                <div class="card">
                    <img src="img/medicamenmto 1.png" class="card-img-top" alt="Paracetamol">
                    <div class="card-body">
                        <h5 class="card-title">Paracetamol</h5>
                        <p class="card-text">$280.999</p>
                    </div>
                </div>
            </div>
            <div class="cardMedic">
                <div class="card">
                    <img src="img/medicamenmto 2.png" class="card-img-top" alt="CardioAspirina">
                    <div class="card-body">
                        <h5 class="card-title">CardioAspirina</h5>
                        <p class="card-text">$594.988</p>
                    </div>
                </div>
            </div>
            <div class="cardMedic">
                <div class="card">
                    <img src="img/medicamento 3.png" class="card-img-top" alt="Gastropan">
                    <div class="card-body">
                        <h5 class="card-title">Gastropan</h5>
                        <p class="card-text">$300.999</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <div class="footer">
        <h3>"Tu receta, a un clic de distancia"</h3>
        <p>Los derechos de esta pagina son preservados.</p>
    </div>
</body>
</html>
